<table>
    {% for pismo in pisma %}
        <tr>
            <td>
                {% set nazwa = pismo.NazwaZrodlaPrzedZarejestrowaniem %}
                <a href="{{ path('pismo_nowe_ze_skanu', {'nazwa': nazwa, 'numerStrony': 1}) }}" >{{ pismo.NazwaSkroconaZrodla(20) }}</a>
            </td>
            <td>
                {% if pismo.JestPodglad() %}+{% endif %}
                
            </td>
            {% if pokazDate is defined %}
            
            <td>
                {{ pismo.dataModyfikacji }}
            </td>
            {% endif %}
        </tr>
    {% endfor %}
</table>
