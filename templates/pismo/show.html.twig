{% extends 'base.html.twig' %}

{% block title %}{{ pismo.nazwaPliku }}{% endblock %}

{% block b_div_pod_belka %}
    <h3>{{ pismo.nazwaPliku }}</h3>
{% endblock %}
{% block b_div_lewy %}
{% set pismo_id = pismo.id %}
{{ include('pismo/listaRej.html.twig') }}

{% endblock %}
{% block b_div_centr %}
<table>
    <tr>
        <td>nazwa:</td>
        <td>{{pismo.nazwaPliku}}</td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>oznaczenie:</td>
        <td>{{pismo.oznaczenie}}</td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>rodzaj dokumentu:</td>
        <td>
            {% if pismo.rodzaj != null %}
                {{pismo.rodzaj.nazwa}}
            {% endif %}
        </td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>{{ pismo.kierunekOpisowo }}</td>
        {% if pismo.strona != null %}
        
        <td>
            <a href="{{ path('kontrahent_show',{'id': pismo.strona.id })}}">
            {{ pismo.strona.nazwa }}
            </a>
        </td>
        {% endif %}

    </tr>
</table>
<br>
<a href="{{path('pismo_edit', {'id' : pismo.id, 'numerStrony': numerStrony })}}">edytuj dane dokumentu</a>
{% endblock %}
{% block b_div_prawy %}
strony: 
{% set indeks = 1 %}
{% for sciezka_png in sciezki_png_dla_stron %}
        <a href="{{ path('pismo_show', {'id' : pismo.id , 'numerStrony': indeks}) }}"> 
        {% if numerStrony == indeks %}
        <<b>{{ indeks }}</b>>
        {% else %}
            {{ indeks }}  
        {% endif %}
    </a>
    {% set indeks = indeks + 1 %}
{% endfor %}
<img src="{{ sciezka_png }}" alt="nie mogę wyświetlić " width="100%">
{% endblock %}